<xml xmlns="http://www.w3.org/1999/xhtml" id="toolbox" style="display: none;">
  <category name="Buffer" colour="#DF6C06">
    <block type="buffer_from_string">
      <value name="STRING_INPUT">
        <shadow type="text"></shadow>
      </value> 
    </block>
    <block type="buffer_to_string">
      <value name="BUFFER_INPUT">
        <shadow type="buffer_empty"></shadow>
      </value>
    </block>
    <block type="buffer_from_list">
      <value name="LIST_INPUT">
      </value> 
    </block>
    <block type="buffer_to_list">
      <value name="BUFFER_INPUT">
        <shadow type="buffer_empty"></shadow>
      </value>
    </block>
    <block type="buffer_alloc">
      <value name="LENGTH">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>
    <block type="buffer_length">
      <value name="BUFFER_INPUT">
        <shadow type="buffer_empty"></shadow>
      </value>
    </block>
    <block type="buffer_fill">
      <value name="BUFFER_INPUT">
        <shadow type="buffer_empty"></shadow>
      </value>
      <value name="FILL_VALUE">
        <shadow type="buffer_byte">
        </shadow>
      </value>
    </block>
    <block type="buffer_check">
      <value name="INPUT">
        <shadow type="buffer_empty"></shadow>
      </value>
    </block>
    <block type="buffer_copy">
      <value name="BUFFER_SOURCE">
        <shadow type="buffer_empty"></shadow>
      </value>
      <value name="BUFFER_DESTINATION">
        <shadow type="buffer_empty"></shadow>
      </value>
    </block>
    <block type="buffer_concatenate">
      <value name="BUFFER_FIRST">
        <shadow type="buffer_empty"></shadow>
      </value>
      <value name="BUFFER_SECOND">
        <shadow type="buffer_empty"></shadow>
      </value>
    </block>
    <block type="buffer_set_index">
      <value name="BUFFER">
        <shadow type="buffer_empty"></shadow>
      </value>
      <value name="INDEX">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
      <value name="VALUE">
        <shadow type="buffer_byte">
        </shadow>
      </value>
    </block>
    <block type="buffer_get_index">
      <value name="BUFFER">
        <shadow type="buffer_empty"></shadow>
      </value>
      <value name="INDEX">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="buffer_byte"></block>
  </category>
</xml>
